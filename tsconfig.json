{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "target": "es2019",
        "esModuleInterop": true,
        "strict": false,
        "sourceMap": true,
        "rootDirs": ["src" , "tests"],
        "baseUrl": "src",
        "paths": {
            "@/tests/*": ["../tests/*"],
            "@/*": ["*"]
        }
    },
    "include": ["src", "tests"],
    "exclude": []
}