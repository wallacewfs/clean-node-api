{
  "name": "clean-node-api",
  "version": "2.5.5",
  "description": "NodeJS Rest API using TDD, Clean Architeture and Typescript",
  "author": "Wallace Silva",
  "repository": "github:wallacewfs/clean-node-api",
  "license": "GPL-3.0-or-later",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "up": "npm run build && docker-compose up",
    "down": "docker-compose down",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand --no-cache",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "keywords": [],
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "jsonwebtoken": "^9.0.1",
    "module-alias": "^2.2.3",
    "mongo-round": "^1.0.0",
    "mongodb": "^5.7.0",
    "nodemon": "^3.0.1",
    "npm": "^9.8.1",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@fakerjs/boolean": "^2.1.1",
    "@shelf/jest-mongodb": "4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/faker": "^6.6.9",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^29.1.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.7.23",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "bson-objectid": "^2.0.4",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.24.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "faker": "^6.6.6",
    "git-commit-msg-linter": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.1.1",
    "lint-staged": "^13.0.3",
    "mockdate": "^3.0.5",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "16.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
